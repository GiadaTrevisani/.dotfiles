# If you come from bash you might have to change your $PATH.
export PATH

# because some of the hombrew stuff is in Italian somehow? Better be explicit
export LANG="en_US.UTF-8"
export LC_CTYPE="en_US.UTF-8"

export PATH=~/.cargo/bin:$PATH
export PATH=~/.local/bin:$PATH
export PATH=~/.gem/bin:$PATH # Ruby gems if installed with snap

if [ "$PLATFORM"  = 'mac' ]; then
    # added by Anaconda3 installer
    export PATH="/Users/lucaangioloni/anaconda3/bin:$PATH"
    alias pip3="/Users/lucaangioloni/anaconda3/bin/pip"
    alias python3="/Users/lucaangioloni/anaconda3/bin/python"

    # Removes the (env-name) when activating an environment. It is redundant since the spaceship theme does this already (better). If the theme is changed re-activate this
    # conda config --set changeps1 False

    export PATH=$HOME/bin:/usr/local/bin:$PATH
    export PATH="/usr/local/sbin:$PATH"

    #Ruby
    export PATH="/usr/local/opt/ruby/bin:$PATH"
    export LDFLAGS="-L/usr/local/opt/ruby/lib"
    export CPPFLAGS="-I/usr/local/opt/ruby/include"
    export PKG_CONFIG_PATH="/usr/local/opt/ruby/lib/pkgconfig"

    #Google Cloud
    export CLOUDSDK_PYTHON="/usr/local/opt/python@3/libexec/bin/python"
    source "/usr/local/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/path.zsh.inc"
    source "/usr/local/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/completion.zsh.inc"

    export EDITOR='/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl'
fi